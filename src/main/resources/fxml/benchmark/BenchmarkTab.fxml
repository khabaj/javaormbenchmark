               <children>
                  <fx:include source="DataSourcesPanel.fxml" HBox.hgrow="ALWAYS" />
                  <VBox prefHeight="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="BENCHMARK SETTINGS:">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <HBox>
                           <children>
                              <VBox spacing="10.0">
                                 <children>
