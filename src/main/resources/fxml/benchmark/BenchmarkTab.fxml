<AnchorPane fx:id="benchmarkTab" prefHeight="628.0" prefWidth="1140.0" styleClass="background" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khabaj.ormbenchmark.launcher.controllers.benchmark.BenchmarkController">
